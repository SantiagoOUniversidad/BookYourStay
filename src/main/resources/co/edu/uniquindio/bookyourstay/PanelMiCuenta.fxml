<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="25.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bookyourstay.controladores.PanelMiCuentaControlador">

    <children>
        <Label text="Mi Cuenta">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <Button fx:id="btnEditarDatos" onAction="#onEditarDatosAction" text="Editar mis datos" prefWidth="200.0" prefHeight="45.0">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="btnEliminarCuenta" onAction="#onEliminarCuentaAction" text="Eliminar mi cuenta" prefWidth="200.0" prefHeight="45.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="btnVolver" onAction="#onVolver" text="Editar mis datos" prefWidth="200.0" prefHeight="45.0">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>

</VBox>
